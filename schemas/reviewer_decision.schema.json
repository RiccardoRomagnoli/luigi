{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewerDecision",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": ["APPROVED", "REJECTED", "NEEDS_USER_INPUT"]
    },
    "winner_candidate_id": { "type": ["string", "null"] },
    "summary": { "type": ["string", "null"] },
    "feedback": { "type": ["string", "null"] },
    "next_prompt": { "type": ["string", "null"] },
    "questions": {
      "type": ["array", "null"],
      "items": { "type": "string", "minLength": 1 }
    },
    "notes": { "type": ["string", "null"] }
  },
  "required": [
    "status",
    "winner_candidate_id",
    "summary",
    "feedback",
    "next_prompt",
    "questions",
    "notes"
  ]
}
