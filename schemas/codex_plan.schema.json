{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodexPlan",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "claude_prompt": {
      "type": ["string", "null"],
      "minLength": 1,
      "description": "A complete, copy-pastable prompt for Claude Code CLI to execute."
    },
    "test_commands": {
      "type": ["array", "null"],
      "description": "Commands the orchestrator should run after implementation to validate the change (unit tests, E2E, lint, etc).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "kind", "label", "command", "timeout_sec"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "kind": {
            "type": ["string", "null"],
            "enum": ["unit", "e2e", "lint", "typecheck", "other", null]
          },
          "label": { "type": ["string", "null"] },
          "command": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "timeout_sec": { "type": ["number", "null"], "minimum": 1 }
        }
      }
    },
    "tasks": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "description", "acceptance_criteria", "suggested_commands"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "acceptance_criteria": {
            "type": ["array", "null"],
            "items": { "type": "string" }
          },
          "suggested_commands": {
            "type": ["array", "null"],
            "items": { "type": "string" }
          }
        }
      }
    },
    "notes": { "type": ["string", "null"] },
    "status": { "type": "string", "enum": ["OK", "NEEDS_USER_INPUT"] },
    "questions": {
      "type": ["array", "null"],
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "required": ["status", "claude_prompt", "tasks", "test_commands", "questions", "notes"]
}

