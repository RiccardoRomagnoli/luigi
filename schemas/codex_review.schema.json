{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CodexReview",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": ["APPROVED", "REJECTED", "NEEDS_USER_INPUT"]
    },
    "feedback": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "additional_tasks": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "description"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "confidence": {
      "type": ["string", "null"],
      "enum": ["low", "medium", "high", null]
    },
    "questions": {
      "type": ["array", "null"],
      "items": { "type": "string", "minLength": 1 }
    },
    "notes": { "type": ["string", "null"] }
  },
  "required": ["status", "feedback", "additional_tasks", "confidence", "questions", "notes"]
}

